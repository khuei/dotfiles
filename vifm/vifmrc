set syscalls

view

set number
set relativenumber

set dotfiles

set notrash

set history=10000

set nofollowlinks

set sortnumbers

set undolevels=100

colorscheme minimal

set wildmenu
set wildstyle=popup

set suggestoptions=normal,visual,view,otherpane,keys,marks,registers

set ignorecase
set smartcase

set nohlsearch
set incsearch

set scrolloff=1

set confirm-=delete,permdelete

set rulerformat=\

set vicmd=$EDITOR

fileview ../ echo >/dev/null
fileviewer */ ls --color --group-directories-first
fileviewer .*/ ls --color --group-directories-first

fileviewer <image/gif>
			\ vifmimg gif %px %py %pw %ph %c
			\ %pc
			\ vifmimg clear

fileviewer <image/*>
			\ vifmimg draw %px %py %pw %ph %c
			\ %pc
			\ vifmimg clear

fileviewer <video/*>
			\ vifmimg video %px %py %pw %ph %c
			\ %pc
			\ vifmimg clear

fileviewer <audio/*>
			\ vifmimg audio %px %py %pw %ph %c
			\ %pc
			\ vifmimg clear

fileviewer <font/*>
			\ vifmimg font %px %py %pw %ph %c
			\ %pc
			\ vifmimg clear

filetype <audio/*> mpv --no-video
filetype <video/*> mpv
filetype <image/*> sxiv
filetype <*/*> xdg-open

nmap q ZQ
nnoremap gg ggj
nnoremap s :shell<cr>
